{
  "$schema": "https://raw.githubusercontent.com/tauri-apps/tauri/v1/schema.json",
  "build": {
    "beforeDevCommand": "npm run dev --prefix ../app",
    "beforeBuildCommand": "npm run build --prefix ../app",
    "devPath": "http://localhost:5173",
    "distDir": "../app/dist"
  },
  "package": {
    "productName": "Intelexta",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": false
    },
    "windows": [
      {
        "title": "Intelexta",
        "fullscreen": false,
        "width": 1200,
        "height": 800
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.intelexta.dev",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    }
  }
}